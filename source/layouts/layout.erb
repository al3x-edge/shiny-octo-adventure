<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Brad's Site!" %></title>
    
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:400,800,900' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize", "mobile", "all" %>
    <%= yield_content(:head) %>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery-url-parser/2.3.1/purl.min.js'></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.1.2/handlebars.min.js'></script>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body>
    <div class="container">
      <%= partial "header" %>
      <%= partial "nav" %>
      <%= yield %>
      <%= partial "footer" %>
    </div>
  </body>
</html>
